#     fi

#     if ! echo "$header" | grep -Eiq 'apache[[:space:]]+license'; then
#       echo "$file" >> "$TMPFILE"
#       continue
#     fi

#     if ! echo "$header" | grep -Eiq 'copyright.*[0-9]{4}'; then
#       echo "$file" >> "$TMPFILE"
#       continue
#     fi
#   done

#     if [ -s "$TMPFILE" ]; then
#     echo ""
#     echo "‚ùå License header check failed for the following newly added files:"
#     sed -n '1,200p' "$TMPFILE" | sed 's/^/  - /'
